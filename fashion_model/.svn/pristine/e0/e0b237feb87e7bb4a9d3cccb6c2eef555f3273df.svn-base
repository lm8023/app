.panel-body {
	color: #fae2bf;
	font-size: 13px;
	line-height: 180%;
	background: #c89348;
	display: block;
	border-left: 5px solid #a77834;
	border-right: 5px solid #a77834;
}

.archive-meta {
	border: 0;
	font-size: 100%;
	font-style: inherit;
	font-weight: inherit;
	margin: 0;
	outline: 0;
	padding: 0;
	vertical-align: baseline;
}

.panel-body p {
	padding-bottom: 20px;
}
main>.container-fluid {
	background: #F8F8F8;
}

main>.container-fluid>.container>.row>.col-md-9>.row {
	background: white;
	margin-bottom: 15px;
	transition: all 0.6s linear;
}

main>.container-fluid>.container>.row>.col-md-9>.row:hover {
	box-shadow: 0 0px 15px rgba(0, 0, 0, 0.3);
}

main>.container-fluid>.container>.row>.col-md-9>.row img {
	max-width: 105px;
	width: 20%;
	float: left;
	margin-top: 15px;
}

main>.container-fluid>.container>.row>.col-md-9>.row blockquote {
	float: left;
	border-left: 0;
	width: 80%;
}
main>.container-fluid>.container>.row>.col-md-9>.row blockquote > p > a{
	color: black;
	transition: all 0.6s linear;
	text-decoration: none;
}
main>.container-fluid>.container>.row>.col-md-9>.row blockquote span{
	font-size: 12px;
}
main>.container-fluid>.container>.row>.col-md-9>.row blockquote > a {
	font-size: 12px;
	color: #c89348;
	transition: all 0.6s linear;
	text-decoration: none;
}
main>.container-fluid>.container>.row>.col-md-9>.row blockquote a:hover{
	color: deeppink;
}

@media (max-width: 767px) {
	main>.container-fluid>.container>.row>.col-md-9>.row blockquote small {
		display: none!important;
	}
}
main>.container-fluid>.container>.row>.col-md-3>.row:nth-child(2){
	background: #eee;
}
main>.container-fluid>.container>.row>.col-md-3 .row:nth-child(1){
	margin-bottom: 15px;
	box-sizing: border-box;
}
@media (min-width: 992px) {
	main>.container-fluid>.container>.row>.col-md-3 {
		margin-left: 15px;
		width: 23%;
	}
}

main>.container-fluid>.container>.row>.col-md-3 .thumbnail img {
	width: 70%;
	max-width: 80%;
}

main>.container-fluid>.container>.row>.col-md-3 .thumbnail {
	text-align: center;
	border: 0;
	padding-top: 15px;
	margin-bottom: 0;
}

main>.container-fluid>.container>.row>.col-md-3>.row {
	transition: all 0.6s linear;
	background: white;
}

main>.container-fluid>.container>.row>.col-md-3>.row:hover {
	box-shadow: 0 0px 15px rgba(0, 0, 0, 0.3);
}
main>.container-fluid>.container>.row>.col-md-3>.row a{
	text-decoration: none;
}
main>.container-fluid>.container>.row>.col-md-3>.row #fashion-news{
	height: 100%;
	width: 100%;
	color: #ababab;
	padding: 15px;
	transition: all 0.6s linear;
}
main>.container-fluid>.container>.row>.col-md-3>.row #fashion-news:hover{
	background: #eee;
	color: #555;
}
main>.container-fluid>.container>.row>.col-md-3>#title~.row .col-md-12{
	padding-left: 0;
	padding-right: 0;
}
