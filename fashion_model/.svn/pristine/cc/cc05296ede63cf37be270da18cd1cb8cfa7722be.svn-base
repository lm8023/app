/*
* 模块化
*/

//@import "footer.less";
//@import "header.less";
main {
    background: #F8F8F8;
    .lunbo {
        img {
            width: 100%;
        }
    }
    .activities {
        img {
            width: 100%;
            transition: all 0.1s linear;
            border: 2px solid white;
        }
        img:hover {
            width: 100%;
            border: 2px solid red;
        }
        .act {
            margin-top: 50px;
            .act-style {
                margin-top: 5px;
                border-radius: 0;
                .thumbnail-text {
                    border-radius: 0;
                    border: 0px;
                    padding: 11px;
                }
                .introduction {
                    padding: 30px;
                    .newbtn {
                        .titltext {
                            color: burlywood;
                            transition: all 0.518s;
                        }
                        .titltext:hover {
                            color: #337ab7;
                            text-decoration: none;
                        }
                    }
                    .infomore {
                        .more-text {
                            background-color: #c89348;
                            border-color: #c89348;
                            box-shadow: rgba(255, 255, 255, 0.14902) 0px 1px 0px inset;
                            text-shadow: rgba(0, 0, 0, 0.298039) 0px -0.5px 0px;
                            border-width: initial;
                            border-style: none;
                            border-color: initial;
                            border-image: initial;
                            transition: 0.15s linear;
                            padding: 10px;
                            a {
                                color: #fff;
                                display: block;
                            }
                        }
                        .more-text:hover {
                            color: #fff;
                            background-color: #dca24f;
                            border-color: #dca24f;
                            a:hover {
                                text-decoration: none;
                            }
                        }
                    }
                }
            }
            .news-info {
                .category,
                .release {
                    color: #989898;
                }
            }
        }
    }
}

.modewoman {
    .product-more {
        a {
            color: burlywood;
            transition: all 0.518s;
        }
        a:hover {
            color: #23527c;
            text-decoration: none;
        }
    }
    .modewoman-content {
        .content {
            padding-left: 2px;
            padding-right: 2px;
            .content-box {
                padding: 0;
                background-color: #F8F8F8;
            }
            .caption {
                p {
                    font-size: 12px;
                    line-height: 100%;
                    color: #8d8d8d;
                }
            }
        }
    }
}

.text-line {
    border-bottom: 1px solid gainsboro;
}

.text-height {
    height: 20px;
}

.cooperation {
    background-color: white;
    .thumbnail {
        border: 0;
    }
    img {
        width: 40%;
    }
    p {
        font-size: 12px;
        line-height: 170%;
        color: #8d8d8d;
    }
    .clearfix {
        .label {
            display: inline-block;
            margin-bottom: 5px;
            padding: 10px 15px;
            background: #f6f6f6;
            cursor: pointer;
            color: #979797;
            transition: 0.15s ease-out;
            white-space: unset;
        }
        .label:hover {
            color: #fff;
            border-color: #000;
            background: #000;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
        }
    }
    .label-default {}
}

//友情链接    
.friendly-link {
    background-color: white;
    .fri-content {
        .img-content {
            border: 0;
        }
    }
}